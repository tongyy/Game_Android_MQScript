		//second ranger position
		findAndClickAbsolutely("autoX80.png",80,505,2,50)
		//line3
		findAndClickAbsolutely("autoX80.png",430,60,2,50)
		//third ranger position
		findAndClickAbsolutely("autoX80.png",80,635,2,50)
